<% var d=test.startTime; var date=d.getDate(); var month=d.getMonth(); var year=d.getFullYear(); var hour=d.getHours();
    var mins=d.getMinutes(); var x=" AM" ; if(date<10){date="0" +date;} if(month<10){month="0" +month;} if(hour>12 )
    {hour=hour-12; x=" PM";}
    if(hour<10){hour="0"+hour;} if(mins<10){mins="0" +mins;} var section=test.section; if(section==="all"
        ){section="All Sections Allowed" ;} %>

        <!doctype html>
        <html lang="en">

        <head>
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">

            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
                crossorigin="anonymous">

            <!-- Google Fonts -->
            <link
                href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
                rel="stylesheet">

            <!-- Font Awesome -->
            <script src="https://kit.fontawesome.com/8a4b29bacf.js" crossorigin="anonymous"></script>
            <!-- jQuery CDN -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

            <link rel="stylesheet" href="/css/style.css">
            <title>The Assesor</title>
            <link rel="icon" href="/images/logo-white.png">
        </head>

        <body>
            <!-- Navbar -->
            <nav class="shadow-lg p-15 mb-1 rounded navbar navbar-expand-lg navbar-dark bg-success sticky-top">
                <div class="container-fluid">
                    <a class="navbar-brand">
                        <img src="<%= user.instituteLogo %> " alt="Logo" width="10%" height="10%"
                            class="d-inline-block align-text-top rounded-circle">
                        <p class="d-inline-block align-text-top responsive-text cell" style="padding-left:2%;">
                            <%= user.instituteName %>
                        </p>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <!-- <span class="navbar-toggler-icon"></span> -->
                        <img src="<%= user.picture%>" alt="" width="60%" height="60%" loading=lazy
                            class="d-inline-block align-text-top rounded-circle">
                    </button>
                    <ul class="navbar-nav ml-* justify-content-end collapse navbar-collapse" id="navbarNavAltMarkup">
                        <!-- <li><a class="nav-link" data-bs-toggle="modal" data-bs-target="#cancel">Go Back</a></li> -->
                        <!-- <li><a class="nav-link" data-bs-toggle="modal" data-bs-target="#start">Start Test</a></li> -->
                        <li><img src="<%= user.picture%>" alt="" width="60%" height="60%" loading=lazy
                                class="d-inline-block align-text-top rounded-circle d-none d-lg-block"></li>
                    </ul>
                </div>
            </nav>
            <div class="container fluid" id="displayArea">
                <div class="row ">
                    <div class="col-lg-7 black-text" style="margin-top: 1.8%;">
                        <div class="row">
                            <div class="col-10">
                                <h4 class="text-center">Instructions</h4>
                                <ol>
                                    <li>
                                        <p class="lh-sm myorangecolor">In case if you have logged in for more than 30 mins, it
                                            is
                                            recommended to go back and logout first and then login again before you
                                            start this test.</p>
                                    </li>
                                    <li>
                                        <p class="lh-base">Test may contain the following types of question such as -
                                        </p>
                                        <ul>
                                            <li>MCQ with 4 options</li>
                                            <li>MCQ with 2 options</li>
                                            <li>One word answer type question</li>
                                            <!-- <li>Subjective answer type question</li> -->
                                        </ul>
                                    </li>
                                    <li  style="margin-top: 2%;">
                                        <p class="lh-base">Your answer will be saved on the cloud when you click
                                            <button class="btn btn-success btn-sm">Save</button> every time you answer.
                                        </p>
                                    </li>
                                    <li>
                                        <p class="lh-base">In case you loose your internet connection, answers which are
                                            saved will be considered for evaluation. Also, you can come back later and resume your exam if there is time left. </p>
                                    </li>
                                    <li>
                                        <p class="lh-base">Do not move back test might end if done so.</p>
                                    </li>
                                    <li>
                                        <p class="lh-base">Click on <button class="btn btn-danger btn-sm"> End
                                                Test</button>to end your test.</p>
                                    </li>
                                </ol>

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5 shadow mybluecolor" style="margin-top: 2%;">
                        <div class="row justify-content-center">
                            <h4 class="text-center">Test Details</h4>
                            <p><br></p>
                            <p class="lh-base">Class : <%= test.class %>
                            </p>
                            <p class="lh-base">Section : <%= section %>
                            </p>
                            <p class="lh-base">Date: <%= date+"/"+month+"/"+year %>
                            </p>
                            <p class="lh-base">Starts at time : <%= hour+" : "+mins+x %>
                            </p>
                            <p class="lh-base">Login window time: <%= test.windowTime %> minutes
                            </p>
                            <p class="lh-base">Duration of the test: <%= test.duration %> minutes</p>
                            <p class="lh-base">Description : <%= test.description %>
                            </p>

                            <div class="row instruction-item">
                                
                                <div class="col text-center">
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#start">Start
                                        Test</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="start" tabindex="-1">
                <div class="modal-dialog ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mycolor">Start Test</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn modal-btn-close" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn modal-btn" data-bs-dismiss="modal"
                                onclick="startThisTest()">Start</button>
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden" id="refreshed" value="no">
            <script>
                onload = function () {
                    var e = document.getElementById("refreshed");
                    if (e.value == "no") e.value = "yes";
                    else { e.value = "no"; location.reload(); }
                }

                $("document").ready(function () {
                    console.log(new Date())
                })

                function startThisTest() {
                    $.post("/student/test/initiate/<%= test._id %>",function (data, status) {
                        if(data.msg==="success"){
                            var targetURL = "/student/test-page/"+data.pid
                            window.open(targetURL, '_blank', 'location=yes,height=screen.availHeight,width=screen.availWidth,scrollbars=yes,status=yes');
                        }
                        else{
                            alert(data.msg)
                        }
                    })
                }
            </script>

            <%- include("../partials/footer.ejs") %>